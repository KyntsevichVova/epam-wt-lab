<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <servlet>
        <servlet-name>horses</servlet-name>
        <servlet-class>com.kyntsevichvova.wtlab.servlet.HorsesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>horses</servlet-name>
        <url-pattern>/horses</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>races</servlet-name>
        <servlet-class>com.kyntsevichvova.wtlab.servlet.RacesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>races</servlet-name>
        <url-pattern>/races</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bets</servlet-name>
        <servlet-class>com.kyntsevichvova.wtlab.servlet.BetsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>bets</servlet-name>
        <url-pattern>/bets</url-pattern>
    </servlet-mapping>

</web-app>